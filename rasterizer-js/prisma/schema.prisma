generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model generations {
  id                  Int           @id @default(autoincrement())
  parent_id           Int?
  generation          Int
  source_image_name   String        @db.VarChar(255)
  source_image_width  Int           @db.SmallInt
  source_image_height Int           @db.SmallInt
  item_count          Int           @db.SmallInt
  item_type           String        @db.VarChar(20)
  training_resolution Int           @db.SmallInt
  created_at          DateTime      @default(now()) @db.Timestamp(0)
  updated_at          DateTime      @default(now()) @db.Timestamp(0)
  optimizer_algorithm String        @db.VarChar(30)
  fitness             Float
  ms_per_generation   Float         @default(0) @db.Float
  compressed_data     Bytes?        @db.MediumBlob
  parent              generations?  @relation("generationsTogenerations_parent_id", fields: [parent_id], references: [id])
  children            generations[] @relation("generationsTogenerations_parent_id")

  @@index([fitness], name: "idx_fitness")
  @@index([source_image_name, fitness], name: "idx_name_fitness")
  @@index([source_image_name, item_type, training_resolution, fitness], name: "idx_name_type_res_fitness")
  @@index([parent_id], name: "parent_id")
}

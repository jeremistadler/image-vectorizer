{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist"
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/browser.d.ts",
    "!src/tests/*.ts"
  ],
  "files": [
    "src/scripts/api.ts",
    "src/scripts/dna.ts",
    "src/scripts/fitness-calculator.ts",
    "src/scripts/gene-mutator.ts",
    "src/scripts/raster.ts",
    "src/scripts/rasterizer-worker.ts",
    "src/scripts/rasterizer.ts",
    "src/scripts/shared.ts",
    "src/scripts/utils.ts",
    "src/components/app.tsx",
    "src/components/dna-grid/grid.tsx",
    "src/components/dna-image/dna-image.tsx",
    "src/components/dna-renderer/renderer.tsx",
    "src/components/uploader/uploader.tsx",
    "typings/browser.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
